{
  "info": {
    "_postman_id": "12345678-1234-1234-1234-123456789012",
    "name": "Vehicle API Collection",
    "description": "Collection for testing vehicle-related API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Vehicle Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/vehicles/{{plateNumber}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "vehicles",
            "{{plateNumber}}"
          ],
          "query": [
            {
              "key": "include",
              "value": "details",
              "description": "Include detailed vehicle information"
            }
          ]
        },
        "description": "Retrieve vehicle information by plate number"
      }
    },
    {
      "name": "Search Vehicles",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"{{searchQuery}}\",\n  \"filters\": {\n    \"year\": {{vehicleYear}},\n    \"make\": \"{{vehicleMake}}\"\n  },\n  \"limit\": 10\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/vehicles/search",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "vehicles",
            "search"
          ]
        },
        "description": "Search for vehicles using various criteria"
      }
    },
    {
      "name": "Update Vehicle Registration",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{apiToken}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"plateNumber\": \"{{plateNumber}}\",\n  \"ownerName\": \"{{ownerName}}\",\n  \"registrationExpiry\": \"{{expiryDate}}\",\n  \"vehicleType\": \"{{vehicleType}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/vehicles/{{vehicleId}}/registration",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "vehicles",
            "{{vehicleId}}",
            "registration"
          ]
        },
        "description": "Update vehicle registration information"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.example.com",
      "description": "Base URL for the API"
    },
    {
      "key": "apiVersion",
      "value": "v1",
      "description": "API version"
    }
  ]
}